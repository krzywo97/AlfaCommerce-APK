<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.search.SearchFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_box_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/content_padding"
        android:paddingTop="@dimen/content_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_box_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/filters_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_spacing"
        android:text="@string/search_filters_summary_empty"
        app:layout_constraintEnd_toStartOf="@id/sort_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_box_container" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/sort_button"
        style="@style/AppTheme.ImageButton"
        android:layout_width="@dimen/search_filters_button"
        android:layout_height="@dimen/search_filters_button"
        android:src="@drawable/sort"
        android:tint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/filters_button"
        app:layout_constraintTop_toBottomOf="@id/search_box_container" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/filters_button"
        android:layout_width="@dimen/search_filters_button"
        android:layout_height="@dimen/search_filters_button"
        android:layout_marginEnd="@dimen/list_item_spacing"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/filters"
        android:tint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_box_container" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters_summary" />

</androidx.constraintlayout.widget.ConstraintLayout>